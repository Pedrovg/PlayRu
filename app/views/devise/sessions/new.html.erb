<div class="container backg" style="background-image: url('https://res.cloudinary.com/ddwthgkml/image/upload/v1584992916/back1_tnnvzx.png'); background-size: 100% 100%; background-repeat: no-repeat;  background-attachment: fixed;">
  <div class="col-lg-4 col-sm-6 sec-back">
    <h1 class="title">PlayR</h1>
    <h1 class="title2">u</h1>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="col form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in", class:"btn" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
  </div>
</div>
